/*
C++ Program to print the following pattern
Input : 5
Output :
A
BB
CCC
DDDD
EEEEE
*/

#include <iostream>
using namespace std;

int main()
{
	int n,i,j;
	cout<<"Enter number of rows : ";
	cin>>n;
	i=1;
	while (i<=n)
	{
		j=1;
		while (j<=i)
		{
			char ch = 'A' + i - 1;
			cout<<ch;
			j++;
		}
		cout<<endl;
		i++;
	}
}
